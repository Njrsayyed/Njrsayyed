// function the name with return type and argument
#include <stdio.h>

int add(int x,int y){
    int sum;
    sum=x+y;
    return sum;
}

void main () {
    int a,b;
    int sum;
    printf("enter the value of a ");
    scanf ("%d",&a);
    printf("enter the value of b ");
    scanf("%d",&b);
    sum = add(a,b);
    printf("%d",sum);
}

output
enter the value of a 10
enter the value of b 20
30
