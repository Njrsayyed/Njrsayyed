// swapping the two function (call by refrence)
#include <stdio.h>

int main() 
{
    int a=4;
    int b=7;
    swap(&a,&b);
  }
  
  void swap(int *ptr1, int *ptr2)
  {
      int temp;
      temp=*ptr1;
      *ptr1=*ptr2;
      *ptr2=temp;
      printf("a=%d , b=%d",*ptr1,*ptr2);
  }
  
  output
  a=7 , b=4
  
